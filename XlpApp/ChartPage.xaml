                        <DataGrid Name="StockDataGrid" ItemsSource="{Binding}" Background="Black" Foreground="White" AutoGenerateColumns="False" ColumnWidth="Auto" Width="Auto"></DataGrid>
                    </StackPanel>
                </TabItem>
                <TabItem Header="Tab2" Background="Black" Foreground="White "/>
                <TabItem Header="Tab3" Background="Black" Foreground="White" />
            </TabControl>
        </Grid>
